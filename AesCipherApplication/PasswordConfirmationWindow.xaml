<Window x:Class="AesCipherApplication.PasswordConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AesCipherApplication" WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="Подтверждение пароля" Height="200" Width="350">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Подтвердите пароль" HorizontalAlignment="Center" Margin="10,10"/>
            <PasswordBox x:Name="pbKey" Width="150" Margin="10,10"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnConfirm" Content="Подтвердить" Margin="20" 
                    Padding="10,0" Click="btnConfirm_Click"/>
                <Button x:Name="btnCancel" Content="Отмена" Margin="20" 
                    Padding="10,0" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
